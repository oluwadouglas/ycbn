{% extends 'charity/base.html' %}
{% load static %}

{% block extra_css %}
<link rel="stylesheet" href="{% static 'assets/css/impact-styles.css' %}">
<link rel="stylesheet" href="{% static 'assets/css/spotlight-styles.css' %}">
<style>
  /* Project grid and cards (from projects.html) */
  .project-card { border: 0; border-radius: 14px; overflow: hidden; background: #fff; transition: transform .2s ease, box-shadow .2s ease; }
  .project-card:hover { transform: translateY(-4px); box-shadow: 0 12px 30px rgba(0,0,0,.08); }
  .project-thumb { position: relative; aspect-ratio: 16/9; background: #f3f6f5; }
  .project-thumb img { width:100%; height:100%; object-fit: cover; display:block; }
  .project-badge { position: absolute; top: 12px; left: 12px; background: #1A685B; color: #fff; border-radius: 999px; padding: 6px 12px; font-size: .78rem; font-weight: 600; box-shadow: 0 6px 18px rgba(26,104,91,.28); }
  .project-body { padding: 16px 16px 18px; }
  .project-title { font-size: 1.05rem; margin: 0 0 6px; color: #122; font-weight: 700; }
  .project-desc { color: #556; font-size: .92rem; margin-bottom: 12px; }
  .project-meta { display:flex; justify-content: space-between; align-items: center; }
  .project-link { color: #1A685B; text-decoration: none; font-weight: 600; }
  .project-link:hover { text-decoration: underline; }

  /* Compact spacing utility for stacked homepage sections */
  .section-compact { padding-top: 3rem; padding-bottom: 3rem; }

  /* Programs styles (from programs.html) */
  .program-card img{aspect-ratio:16/10;object-fit:cover}
  .program-card .card-title{font-weight:700}
  .program-card .card-text{min-height:3.6em}
  .category-head{display:flex;align-items:end;gap:.75rem}
  .category-count{font-size:.9rem;color:#6c757d}
  .program-badge{position:absolute;top:.5rem;left:.5rem}
  .card-footer{background:transparent}
  @media (prefers-color-scheme: dark){.category-count{color:#adb5bd}}
  .programs-hero{background:linear-gradient(135deg,#f8fafc,#eef2ff);border-radius:12px}
  .programs-hero .lead{color:#475569}
  @media (prefers-color-scheme: dark){.programs-hero{background:linear-gradient(135deg,#0b1220,#131c2b)}.programs-hero .lead{color:#cbd5e1}}
  .btn-soft{background:#f1f5f9;color:#0f172a}
  .btn-soft:hover{background:#e2e8f0}
  @media (prefers-color-scheme: dark){.btn-soft{background:#0f172a;color:#e2e8f0}.btn-soft:hover{background:#111827}}

  /* Donation card aspect ratio (from donation.html) */
  .donation-card .box-thumb { aspect-ratio: 16/9; overflow: hidden; border-radius: 10px; background: #f5f5f5; }
  .donation-card .box-thumb img { width:100%; height:100%; object-fit:cover; display:block; }

  /* Vision/Mission/Core Values: compact spacing + strong flair */
  #about-vmc-home { padding-top: 8px !important; padding-bottom: 24px; background: linear-gradient(135deg, #ecfdf5 0%, #e6fffa 100%); border-radius: 16px; position: relative; }
  #about-vmc-home .sub-title { color:#1A685B; font-weight:800; text-transform: uppercase; letter-spacing:.6px; }
  #about-vmc-home .sec-title { color: #ffffff; letter-spacing: -.2px; margin-bottom: .5rem; }
  #about-vmc-home .lead { color: #334155; }
  #about-vmc-home .feature-card { background:#ffffff; border: 1px solid rgba(26,104,91,.14); border-radius: 14px; transition: transform .25s ease, box-shadow .25s ease; }
  #about-vmc-home .feature-card:hover { transform: translateY(-6px); box-shadow: 0 20px 36px rgba(16,24,40,.14); }
  #about-vmc-home .box-icon span { background: linear-gradient(135deg,#1A685B,#22a391); box-shadow: 0 10px 24px rgba(26,104,91,.28); }
  #about-vmc-home .core-value-card { display:flex; align-items:center; gap:.5rem; padding:.5rem .75rem; background:#fff; border:1px solid rgba(2,6,23,.06); border-radius: 999px; box-shadow: 0 8px 16px rgba(2,6,23,.05); }
  #about-vmc-home .core-value-icon { display:inline-flex; align-items:center; justify-content:center; width:30px; height:30px; border-radius:50%; box-shadow: inset 0 0 0 2px rgba(255,255,255,.45); }
  #about-vmc-home .core-value-title { font-weight: 800; color:#0b1324; font-size:.92rem; }
  /* Title accent + icon pulse */
  @keyframes pulse-soft { 0%,100% { transform: translateY(0); } 50% { transform: translateY(-2px); } }
  #about-vmc-home .box-icon span { animation: pulse-soft 3s ease-in-out infinite; }
  #about-vmc-home .title-accent { width: 100px; height: 4px; border-radius: 4px; margin: .25rem auto 0; background: linear-gradient(90deg,#1A685B,rgba(26,104,91,.55)); box-shadow: 0 4px 14px rgba(26,104,91,.28); }
  @media (prefers-color-scheme: dark) {
    #about-vmc-home { background: linear-gradient(135deg, #0b1220 0%, #131c2b 100%); }
    #about-vmc-home .lead { color:#cbd5e1; }
    #about-vmc-home .feature-card { background:#0f172a; border-color: rgba(148,163,184,.18); }
    #about-vmc-home .core-value-card { background:#0f172a; border-color: rgba(148,163,184,.12); }
    #about-vmc-home .core-value-title { color:#e2e8f0; }
  }
 </style>
{% endblock %}

{% block title %}YCBF Uganda | Empowering Youth for Tomorrow{% endblock %}

{% block content %}
<!--==============================
Hero Area
==============================-->
<div class="th-hero-wrapper hero-2" id="hero" data-bg-src="{% static 'assets/img/hero/hero_bg_2_1.png' %}" data-overlay="gray" style="margin-bottom:0;">
    <div class="container">
        <div class="row gx-40 align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="hero-2-img">
                    <img src="{% static 'assets/img/hero/hero_thumb_1_1.jpg' %}" alt="Image">
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-content">
                    <span class="sub-title after-none before-none"><i class="far fa-heart text-theme"></i> YCBN</span>
                    <h1 class="display-4 mb-3">Youth Capacity Building Network - Stand Up. Skill Up. Step Out.</h1>
                    <p class="lead mb-4">Empowering young people through skill development, mentorship, and community engagement.</p>
                    <a href="{% url 'charity:about' %}" class="th-btn">Learn More<i class="fas fa-arrow-up-right ms-2"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Vision, Mission, Core Values (now directly under hero, no extra gap) -->
<section class="space section-compact" id="about-vmc-home" style="margin-top:0; padding-top:8px; padding-bottom:24px;">
  <div class="container position-relative" style="z-index:2;">
    <div class="row justify-content-center mb-2">
      <div class="col-lg-10 text-center">
        <span class="sub-title after-none before-none"><i class="far fa-heart text-theme"></i> Empowering Uganda’s Youth</span>
        <h2 class="sec-title mb-3">Empowering Uganda’s Youth with Skills, Knowledge &amp; Hope for Tomorrow</h2>
        <div class="title-accent"></div>
        <p class="lead mb-0">Building a brighter future for young people in schools and local communities.</p>
      </div>
    </div>
    <div class="row gy-3 mb-2 justify-content-center">
      <div class="col-md-4">
        <div class="feature-card h-100 text-center shadow-sm bg-white">
          <div class="box-icon mb-3">
            <span class="d-inline-block rounded-circle bg-theme text-white" style="padding:18px;">
              <i class="fas fa-eye fa-2x"></i>
            </span>
          </div>
          <h5 class="box-title">Our Vision</h5>
          <p class="box-text">To nurture an informed, skilled, and healthy youth population in Uganda, capable of driving sustainable development and positive societal change.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card h-100 text-center shadow-sm bg-white">
          <div class="box-icon mb-3">
            <span class="d-inline-block rounded-circle bg-theme text-white" style="padding:18px;">
              <i class="fas fa-bullseye fa-2x"></i>
            </span>
          </div>
          <h5 class="box-title">Our Mission</h5>
          <p class="box-text">To equip young people in schools and communities with essential tools for a purposeful life through holistic knowledge, capacity building, health awareness, and guidance programs.</p>
        </div>
      </div>
      <div class="col-md-4">
        <div class="feature-card h-100 text-center shadow-sm bg-white">
          <div class="box-icon mb-3">
            <span class="d-inline-block rounded-circle bg-theme text-white" style="padding:18px;">
              <i class="fas fa-gem fa-2x"></i>
            </span>
          </div>
          <h5 class="box-title mb-3">Our Core Values</h5>
          <div class="row g-2 justify-content-center">
            <div class="col-6"><div class="core-value-card"><span class="core-value-icon bg-success text-white"><i class="fas fa-hands-helping"></i></span><div class="core-value-title">Empathy</div></div></div>
            <div class="col-6"><div class="core-value-card"><span class="core-value-icon bg-primary text-white"><i class="fas fa-shield-alt"></i></span><div class="core-value-title">Integrity</div></div></div>
            <div class="col-6"><div class="core-value-card"><span class="core-value-icon bg-warning text-white"><i class="fas fa-users"></i></span><div class="core-value-title">Community</div></div></div>
            <div class="col-6"><div class="core-value-card"><span class="core-value-icon bg-danger text-white"><i class="fas fa-star"></i></span><div class="core-value-title">Excellence</div></div></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- YCBF Uganda Services Section with Rich Styling (no top gap) -->
